<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/safelet_red" />

            <stroke android:width="1dp" android:color="@color/safelet_red" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/tab_corner" android:topLeftRadius="0dp" android:topRightRadius="@dimen/tab_corner" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/white" />

            <stroke android:width="1dp" android:color="@color/safelet_red" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/tab_corner" android:topLeftRadius="0dp" android:topRightRadius="@dimen/tab_corner" />
        </shape>
    </item>
</selector>