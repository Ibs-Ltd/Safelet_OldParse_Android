<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/safelet_red" />

            <stroke android:width="1dp" android:color="@color/safelet_red" />

            <corners android:bottomLeftRadius="@dimen/tab_corner" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/tab_corner" android:topRightRadius="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/white" />

            <stroke android:width="1dp" android:color="@color/safelet_red" />

            <corners android:bottomLeftRadius="@dimen/tab_corner" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/tab_corner" android:topRightRadius="0dp" />
        </shape>
    </item>
</selector>