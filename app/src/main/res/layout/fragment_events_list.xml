<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ListView
        android:id="@+id/notifications_user_info_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/list_item_background_light" />
    <!--
    android:layout_below="@+id/notification_banner_layout"
    -->

    <ProgressBar
        android:id="@+id/notifications_progressbar_pb"
        style="?android:attr/progressBarStyleSmallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/notificationsNoneAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/events_noevents_label"
        android:textColor="@color/gray_text_login"
        android:textSize="17sp"
        android:visibility="gone" />

</RelativeLayout>
