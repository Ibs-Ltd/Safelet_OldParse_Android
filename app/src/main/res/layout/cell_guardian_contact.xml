<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/cell_guardian_contacts_image_iv"
            android:layout_width="@dimen/invite_guardian_image_size"
            android:layout_height="@dimen/invite_guardian_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/generic_icon" />

        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/cell_guardian_contacts_image_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cell_guardian_contacts_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="a" />

            <TextView
                android:id="@+id/cell_guardian_contacts_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                tools:text="b" />

            <TextView
                android:id="@+id/cell_guardian_contacts_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="c" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/info_container"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/cell_guardian_contacts_image_iv"
            android:orientation="vertical">

            <Button
                android:id="@+id/cell_guardian_invite_contact"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_button_safelet_red"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/invite_action_requestasguardian"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cell_guardian_cancel_invite_contact"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_button_safelet_red"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/invite_action_cancelrequest"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cell_guardian_request_guardian"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_button_safelet_red"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/invite_action_requestasguardian"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cell_guardian_cancel_guardian_request"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_button_safelet_red"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/invite_action_cancelrequest"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>